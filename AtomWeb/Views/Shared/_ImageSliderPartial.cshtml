@model ImageSliderVM

@if (Model != null && Model.SliderData != null && Model.SliderData.Count > 0)
{
    <div class="box">
        <div>
            <h2>@Model.SliderTitle</h2>
        </div>
        <div class="carouselbox">
            <div id="imageSlider" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.SliderData.Count; i++)
                    {
                        KeyValuePair<string, string> pair = Model.SliderData[i];
                        <li data-target="#imageSlider" data-slide-to="@i" class="@(i == 0 ? "active":"")"></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.SliderData.Count; i++)
                    {
                        KeyValuePair<string, string> pair = Model.SliderData[i];
                        if (!string.IsNullOrEmpty(pair.Key) && !string.IsNullOrEmpty(pair.Value))
                        {
                            <div class="carousel-item @(i == 0 ? "active":"")">
                                <div class="row">
                                    @if (i % 2 == 0)
                                    {
                                        <div class="col-lg-auto">
                                            <img height="250" alt="@pair.Key" src="@pair.Value">
                                        </div>
                                        <div class="col-lg-auto">
                                            <h3 class="text-white ">@pair.Key</h3>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-lg-auto">
                                            <h3 class="text-white">@pair.Key</h3>
                                        </div>
                                        <div class="col-lg-auto">
                                            <img height="250" alt="@pair.Key" src="@pair.Value">
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                        else if (string.IsNullOrEmpty(pair.Key) && !string.IsNullOrEmpty(pair.Value))
                        {
                            <div class="carousel-item @(i == 0 ? "active":"")" style="height:100%;">
                                <div class="d-flex" style="height:100%;">
                                    <img height="250" alt="@pair.Key" class="m-auto @(i%2 == 0 ? "left":"right")" src="@pair.Value">

                                </div>
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(pair.Key) && string.IsNullOrEmpty(pair.Value))
                        {
                            <div class="carousel-item @(i == 0 ? "active":"")" style="height:100%;">
                                <div class="d-flex" style="height:100%;">
                                    <h3 class="m-auto col-auto text-white @(i%2 == 0 ? "right":"left")">@pair.Key</h3>
                                </div>
                            </div>
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#imageSlider" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#imageSlider" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
}